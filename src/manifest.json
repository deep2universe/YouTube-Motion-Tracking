{
  "name": "YouTube™ Motion Tracking - Halloween Edition",
  "description": "AI-powered Halloween effects for YouTube™ with 38 spooky animations, horror filters, motion patterns, and interactive game mode!",
  "version": "2.0.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "run_at": "document_end",
      "js": ["content.js"],
      "css": [
        "content.css",
        "themes/youtube-theme-variables.css",
        "themes/youtube-theme.css",
        "themes/youtube-theme-particles.css",
        "themes/youtube-theme-colors.css"
      ]
    }
  ],
  "permissions": ["activeTab", "tabs", "webNavigation", "storage"],
  "action": {
    "default_icon": {
      "16": "/images/logo16.png",
      "32": "/images/logo32.png",
      "48": "/images/logo48.png",
      "128": "/images/logo128.png"
    }
  },
  "icons": {
    "16": "/images/logo16.png",
    "32": "/images/logo32.png",
    "48": "/images/logo48.png",
    "128": "/images/logo128.png"
  },
  "host_permissions": [
    "https://www.youtube.com/*"
  ],
  "web_accessible_resources": [
    {
      "resources": [ "/images/*"],
      "matches": [ "https://www.youtube.com/*" ]
    }
  ]
}
